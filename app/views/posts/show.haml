%article.post
  %header
    .date-header= @post.created_at.strftime("%A, %B %-d, %Y")
    %h2.title= @post.title

  %p= simple_format(@post.content)

  %footer
    %p Posted by #{@post.account.name}
    %p Category: #{@post.category.name}
    %p at 11:36 PM
    %p No comments:
    %p Labels: Retro, Vintage
